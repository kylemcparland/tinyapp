<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <% if (user) { %>
        <div class="d-flex ml-auto">
        <form class="form-inline" method="POST" action="/logout">
        <h5 style="margin-right: 10px;">Logged in as: <%= user.email %>!</h5>
        <button type="submit" class="btn btn-primary">Logout</button>
        </form>
      </div>
      <% } else { %>
        <div class="d-flex ml-auto">
        <form class="form-inline" method="GET" action="/register">
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <form class="form-inline ml-2" method="GET" action="/login">
          <button type="submit" class="btn btn-primary">Login</button>
      </form>
        </div>
        <% } %>

    </div>
  </nav>
</header>

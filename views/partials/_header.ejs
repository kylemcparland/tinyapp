<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <% if (user) { %>
        <form class="form-inline ml-auto" method="POST" action="/logout">
        <h4 class="card-text ml-auto">Logged in as: <%= user.email %>!</h4>
        <button type="submit" class="btn btn-primary">Logout</button>
        </form>
      <% } else { %>
        <form class="form-inline ml-auto" method="POST" action="/login">
          <div class="form-group mb-2">
            <input
              class="form-control"
              type="text"
              name="username"
              placeholder="Username"
              style="width: 300px; margin: auto"
            />
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
          </div>
        </form>
        <% } %>



     

    </div>
  </nav>
</header>
